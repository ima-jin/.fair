{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "title", "contributors", "created_by", "created_at"],
  "properties": {
    "id": { "type": "string" },
    "title": { "type": "string" },
    "context": { "type": "string" },
    "contributors": { "type": "array" },
    "created_by": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },
    "tags": { "type": "array" }
  }
}
